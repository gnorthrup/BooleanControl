%This is supposed to be an implementation of a simple, 4 node, boolean
%network

clear all
close all

NUMNODES = 4;
NUMSTEPS = 10;

nodes = zeros(NUMNODES,NUMSTEPS); %initialize matrix to track node states

for i=1:NUMNODES
    randstate = round(rand);
    nodes(i,1) = [randstate]; %set random starting conditions 
end 

IDtree1 = eval_tree(gatetype.ID, 1);
IDtree2 = eval_tree(gatetype.ID, 2);
IDtree3 = eval_tree(gatetype.ID, 3);
IDtree4 = eval_tree(gatetype.ID, 4);

eval1 = eval_tree(gatetype.NOT, node4ID);
eval2 = eval_tree(gatetype.AND, node1ID, node4ID);
eval3 = eval_tree(gatetype.ID, 1);
eval4 = eval_tree(gatetype.OR, node3ID, eval_tree(gatetype.NOT, node2ID));

no_array = [node1,node2,node3,node4];

for i=2:NUMSTEPS
    for j=1:NUMNODES
        nodes(j,i) = node_array(j).eval(i-1, nodes);
    end
end

